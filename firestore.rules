rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection – any auth user can read all (to see company info); only admin can write
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Leads – authenticated users can CRUD leads
    match /leads/{leadId} {
      allow read, write: if request.auth != null;
    }

    // Call History – authenticated users can CRUD their own
    match /history/{historyId} {
      allow read, write: if request.auth != null 
        && (resource == null || resource.data.userId == request.auth.uid);
    }

    // Campaigns – authenticated users can CRUD their own
    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null 
        && (resource == null || resource.data.userId == request.auth.uid);
    }

    // Products – currently via Google Sheets, but adding rule for consistency
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Global settings – any authenticated user can read; only admin writes
    match /settings/{doc} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}


